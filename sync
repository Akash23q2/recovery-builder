#!/bin/bash
sudo apt install wget

mkdir -p /tmp/rom
cd /tmp/rom

repo init -u https://github.com/PixelExperience/manifest -b ten

# Sync source with -q, no need unnecessary messages, you can remove -q if want! try with -j30 first, if fails, it will try again with -j8
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j$(nproc --all) || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8

##delete these lines, and replace with your own lines of device sauce
git clone https://github.com/Akash23q2/vendor_lenovo_TBX304
git clone https://github.com/Akash23q2/device_lenovo_TBX304

cd /tmp/rom
