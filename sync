#!/bin/bash
cd ~
mkdir device
sudo apt install git aria2 -y
git clone https://gitlab.com/OrangeFox/misc/scripts
cd scripts
sudo bash setup/android_build_env.sh
sudo bash setup/install_android_sdk.sh
mkdir ~/OrangeFox_10
cd ~/OrangeFox_10
git clone https://gitlab.com/OrangeFox/sync.git # or, "git clone git@gitlab.com:OrangeFox/sync.git"
cd ~/OrangeFox_10/sync
./get_fox_10.sh ~/OrangeFox_10/fox_10.0
pwd
ls
cd ~/OrangeFox_10/fox_10.0
##delete these lines, and replace with your own lines of device sauce
git clone https://dumps.tadiphone.dev/dumps/redmi/merlinnfc.git keks
cd keks/twrp-device-tree
cp xiaomi/ /home/ci/device/
cd /home/ci/device
mkdir device
mv xiaomi /device
mv xiaomi merlin

